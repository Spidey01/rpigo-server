
rpigo_log_timestamp() {
    if [ -z "$RPIGO_DEVELOPER" ]; then
        date +"%Y-%m-%dT%H:%M%z" 
    else
        date +"T%H:%M" 
    fi
}


rpigo_debug() {
    echo "$(basename $0)/d(pid=$$, $(rpigo_log_timestamp)):" $*
}


rpigo_info() {
    echo "$(basename $0)/i(pid=$$, $(rpigo_log_timestamp)):" $*
}


rpigo_warn() {
    echo "$(basename $0)/w(pid=$$, $(rpigo_log_timestamp)):" $*
}


rpigo_error() {
    echo "$(basename $0)/e(pid=$$, $(rpigo_log_timestamp)):" $*
}

